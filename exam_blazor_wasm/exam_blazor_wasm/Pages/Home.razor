@page "/"

<PageTitle>Home</PageTitle>

<div class="flex items-center px-4 py-8 sm:px-8 sm:py-16">
    <div class="max-w-6xl w-full mx-auto flex flex-col lg:flex-row justify-between items-center gap-6 sm:gap-8 lg:gap-16">
        <div class="flex-1 w-full max-w-2xl text-center lg:text-left">
            <h1 class="text-2xl sm:text-4xl lg:text-6xl font-bold text-primary mb-3 sm:mb-4 lg:mb-6">
                RandomStrangerStack
            </h1>
            <p class="text-base sm:text-lg lg:text-xl text-secondary mb-6 sm:mb-8 lg:mb-10">
                Discover and connect with random people from around the world.
                Built with Blazor WebAssembly and modern web technologies.
            </p>
            <div class="flex gap-3 sm:gap-4 flex-wrap justify-center lg:justify-start">
                <a href="/profiles"
                   class="inline-block whitespace-nowrap bg-primary text-white px-4 sm:px-8 py-3 rounded-lg font-semibold hover:bg-blue-600 transition-colors">
                    Explore Profiles
                </a>
                <a href="/readme"
                   class="inline-block whitespace-nowrap bg-surface-elevated text-primary px-4 sm:px-8 py-3 rounded-lg font-semibold hover:bg-gray-700 border border-gray-700 transition-colors">
                    Learn More
                </a>
            </div>
        </div>

        <img src="Assets/svg/landingPageIlustration.svg" alt="illustration"
             class="max-w-lg opacity-80"/>
    </div>
</div>
