<div>
    <img src="@User.ThumbnailUrl" alt="@User.FullName" @onclick="HandleClick"/>
    <ul class="text-font-white">
        <li>@User.FullName</li>
        <li>@User.Gender</li>
        <li>@User.Country</li>
        <li>@User.Email</li>
    </ul>
</div>

@code {
    [Parameter] public User User { get; set; } = new();
    [Parameter] public EventCallback<User> OnClick { get; set; }

    private async Task HandleClick()
    {
        await OnClick.InvokeAsync(User);
    }

}