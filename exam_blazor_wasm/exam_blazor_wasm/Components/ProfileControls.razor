<div class="w-full mx-auto">
    <div class="relative w-full max-w-sm">
        <input type="text" class="p-2 text-xl rounded-lg text-left w-full"
               placeholder="Search by name/country/gender..."
               @oninput="OnSearchInput"/>
        <svg class="absolute top-50 right-4 translate-y-50"
             xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#111827">
            <path
                d="M784-120 532-372q-30 24-69 38t-83 14q-109 0-184.5-75.5T120-580q0-109 75.5-184.5T380-840q109 0 184.5 75.5T640-580q0 44-14 83t-38 69l252 252-56 56ZM380-400q75 0 127.5-52.5T560-580q0-75-52.5-127.5T380-760q-75 0-127.5 52.5T200-580q0 75 52.5 127.5T380-400Z"/>
        </svg>

    </div>
    <select class="p-2 text-xl rounded-lg text-center" @onchange="OnCountChanged">
        <option value="5">5</option>
        <option value="10" selected>10</option>
        <option value="20">20</option>
        <option value="50">50</option>
    </select>
    <button @onclick="OnRefreshClick">Refresh</button>
</div>

@code {
    [Parameter] public EventCallback<int> OnCountChange { get; set; }
    [Parameter] public EventCallback<string> OnSearchChange { get; set; }
    [Parameter] public EventCallback<string> OnRefresh { get; set; }

    private async Task OnCountChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int count))
            await OnCountChange.InvokeAsync(count);
    }

    private async Task OnSearchInput(ChangeEventArgs e)
    {
        await OnSearchChange.InvokeAsync(e.Value?.ToString() ?? string.Empty);
    }

    private async Task OnRefreshClick()
    {
        await OnRefresh.InvokeAsync();
    }

}