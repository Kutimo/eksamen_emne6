@using exam_blazor_wasm.Models

<Modal IsOpen="IsOpen" OnClose="OnClose">
    @if (User is not null)
    {
        <div class="flex flex-col items-center mx-auto">
            <img class="w-32 h-32 rounded-full mb-6 border-4 border-primary" src="@User.LargeImageUrl" alt="@User.FullName"/>
            <h2 class="text-2xl font-bold text-primary mb-2">@User.Title @User.FullName</h2>
            <p class="text-secondary mb-6">@User.Email</p>

            <div class="w-full space-y-3">
                <div class="flex justify-between py-2 border-b border-gray-700">
                    <span class="text-primary">Age</span>
                    <span class="text-primary font-medium">@User.Age</span>
                </div>
                <div class="flex justify-between py-2 border-b border-gray-700">
                    <span class="text-primary">Gender</span>
                    <span class="text-primary font-medium">@User.Gender</span>
                </div>
                <div class="flex justify-between py-2 border-b border-gray-700">
                    <span class="text-primary">Phone</span>
                    <span class="text-primary font-medium">@User.Phone</span>
                </div>
                <div class="flex justify-between py-2 border-b border-gray-700">
                    <span class="text-primary">Nationality</span>
                    <span class="text-primary font-medium">@User.Nationality</span>
                </div>
                <div class="flex justify-between py-2 border-b border-gray-700">
                    <span class="text-primary">Location</span>
                    <span class="text-primary font-medium text-right">@User.City, @User.Country</span>
                </div>
                <div class="flex justify-between py-2 border-b border-gray-700">
                    <span class="text-primary">Address</span>
                    <span class="text-primary font-medium text-right">@User.StreetName @User.StreetNumber</span>
                </div>
                <div class="flex justify-between py-2">
                    <span class="text-primary">Registered</span>
                    <span class="text-primary font-medium">@User.RegisteredDate.ToString("dd MMM yyyy")</span>
                </div>
            </div>
        </div>
    }
</Modal>

@code {
    [Parameter] public User? User { get; set; }
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
}
